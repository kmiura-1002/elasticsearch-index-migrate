{
    "settings": {
        "index": {
            "refresh_interval": "1s",
            "number_of_shards": 1,
            "number_of_replicas": 1,
            "search": {
                "slowlog": {
                    "threshold": {
                        "query": {
                            "trace": "100ms",
                            "debug": "100ms",
                            "info": "100ms",
                            "warn": "1000ms"
                        },
                        "fetch": {
                            "trace": "100ms",
                            "debug": "100ms",
                            "info": "100ms",
                            "warn": "1000ms"
                        }
                    },
                    "level": "info"
                }
            },
            "indexing": {
                "slowlog": {
                    "threshold": {
                        "index": {
                            "trace": "100ms",
                            "debug": "100ms",
                            "info": "100ms",
                            "warn": "1000ms"
                        }
                    },
                    "level": "info"
                }
            }
        }
    },
    "mappings": {
        "dynamic": "strict",
        "properties": {
            "index_name": {
                "type": "keyword"
            },
            "migrate_version": {
                "type": "keyword"
            },
            "description": {
                "type": "text"
            },
            "script_name": {
                "type": "keyword"
            },
            "script_type": {
                "type": "keyword"
            },
            "installed_on": {
                "type": "date"
            },
            "execution_time": {
                "type": "long"
            },
            "success": {
                "type": "boolean"
            },
            "checksum": {
                "type": "keyword"
            }
        }
    }
}
