{
    "settings": {
        "index": {
            "refresh_interval": "1s",
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "search": {
                "slowlog": {
                    "threshold": {
                        "query": {
                            "trace": "100ms",
                            "debug": "100ms",
                            "info": "100ms",
                            "warn": "1000ms"
                        },
                        "fetch": {
                            "trace": "100ms",
                            "debug": "100ms",
                            "info": "100ms",
                            "warn": "1000ms"
                        }
                    },
                    "level": "info"
                }
            },
            "indexing": {
                "slowlog": {
                    "threshold": {
                        "index": {
                            "trace": "100ms",
                            "debug": "100ms",
                            "info": "100ms",
                            "warn": "1000ms"
                        }
                    },
                    "level": "info"
                }
            }
        }
    },
    "mappings": {
        "_doc": {
            "dynamic": "strict",
            "properties": {
                "created": {
                    "type": "date",
                    "format": "date_time"
                }
            }
        }
    }
}
